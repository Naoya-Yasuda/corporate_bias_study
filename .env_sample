# OAuth認証設定
# true: OAuth認証を有効化（デフォルト）
# false: OAuth認証を無効化（誰でもアクセス可能）
OAUTH_FLAG=true

# Google OAuth設定（OAUTH_FLAG=trueの場合に必要）
GOOGLE_CLIENT_ID=your_client_id
GOOGLE_CLIENT_SECRET=your_client_secret
GOOGLE_REDIRECT_URI=http://localhost:8501

# 認証設定
ALLOWED_DOMAINS=cyber-u.ac.jp
ALLOWED_EMAILS=admin@cyber-u.ac.jp,test@example.com
AUTH_DEBUG_MODE=false
SESSION_TIMEOUT=3600

# セキュリティ設定
JWT_SECRET_KEY=your_jwt_secret_key_change_this_in_production
ENCRYPTION_KEY=your_encryption_key_change_this_in_production

# Storage Settings
# ストレージモード統一設定
# "local": ローカルファイルシステムのみに保存
# "s3": S3のみに保存（AWS認証情報必須）
# "both": ローカル + S3の両方に保存（AWS認証情報必須）
# "auto": S3利用可能なら両方に保存、不可能ならローカルのみ（推奨設定）
STORAGE_MODE=auto

# AWS S3設定（STORAGE_MODEがs3, both, autoの場合に必要）
AWS_ACCESS_KEY=your_aws_access_key
AWS_SECRET_KEY=your_aws_secret_key
AWS_REGION=ap-northeast-1
S3_BUCKET_NAME=your_s3_bucket_name

# SNS投稿機能設定
# X/Twitter API認証情報（将来的に実装予定）
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_BEARER_TOKEN=your_twitter_bearer_token
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret

# SNS投稿制御設定
TWITTER_POSTING_ENABLED=true
TWITTER_MAX_DAILY_POSTS=10
TWITTER_DUPLICATE_PREVENTION_HOURS=24

# GA4 Analytics設定
# Google Analytics 4測定ID（G-XXXXXXXXXX形式）
GA4_MEASUREMENT_ID=G-XXXXXXXXXX

# GA4トラッキング有効化設定
# true: GA4トラッキングを有効化（デフォルト）
# false: GA4トラッキングを無効化
GA4_ENABLED=false
