# EditorConfig is awesome: https://EditorConfig.org

# トップレベルの設定
root = true

# すべてのファイルのデフォルト設定
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Pythonファイルの設定
[*.py]
indent_style = space
indent_size = 4
max_line_length = 100

# YAMLファイルの設定
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdownファイルの設定
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# JSONファイルの設定
[*.json]
indent_style = space
indent_size = 2

# シェルスクリプトの設定
[*.sh]
indent_style = space
indent_size = 2

# 環境変数ファイルの設定
[.env*]
end_of_line = lf